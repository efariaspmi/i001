<style>
    html, body {
        height: 100%;
    }

    #ajax-loader {
        width: 100%;
        height: 100%;
    }

        #ajax-loader > div {
            padding-top: 20%;
        }
</style>

@section scripts {
    <script>
        ShowLoader();

        function ShowLoader() {
            $("#ajax-loader").removeClass("hidden");
            $("#ajax-content").addClass("hidden");
        }
        function HideLoader() {
            $("#ajax-loader").addClass("hidden");
            $("#ajax-content").removeClass("hidden");
        }

        function LoadPage() {
            console.log("Entrou load page");

            $("#ajax-content").append("Entrou LoadPage");

            //setTimeout(HideLoader, 5000);

            $type = "POST";

            $.ajax({
                url: "/Iframe/Request1",
                type: $type,
                async: true,
                data: {
                    QUERY: '@ViewBag.QUERY',
                    d: '@ViewBag.d',
                    contract: '@ViewBag.contract',
                    contact: '@ViewBag.contact',
                    sap: '@ViewBag.sap'
                },
                beforeSend: function () {
                    ShowLoader();
                }
            })
                .done(function (msg) {
                    $("#ajax-content").html(msg);
                    HideLoader();
                    console.log("Ajax Finalizado OK");
            })
                .fail(function (jqXHR, textStatus, msg) {
                    $("#ajax-content").html(
                        '<div class="alert alert-danger">'
                        + '<h4><i class="icon fa fa-file-text"></i> Aviso!</h4>'
                        + 'Falha ao carregar cadastro'
                        + '<br/><i>' + msg + '</i>'
                        + '</div >');
                    HideLoader();
                    console.log("Ajax Finalizado Fail");
            });

        }

        $(document).ready(function () {
            LoadPage();
        });
    </script>
}